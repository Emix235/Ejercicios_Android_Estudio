<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnCamara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:text="@string/abrir_camara_button"
        app:layout_constraintBottom_toTopOf="@+id/ImageView1"
        app:layout_constraintEnd_toStartOf="@+id/btnBuscar"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ImageView1"
        android:layout_width="372dp"
        android:layout_height="564dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCamara" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="12dp"
        android:text="RECUPERAR FOTO"
        app:layout_constraintBottom_toTopOf="@+id/ImageView1"
        app:layout_constraintStart_toEndOf="@+id/btnCamara"
        app:layout_constraintTop_toBottomOf="@+id/et1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="71dp"
        android:layout_height="42dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="18dp"
        android:text="VER"
        app:layout_constraintBottom_toTopOf="@+id/ImageView1"
        app:layout_constraintStart_toEndOf="@+id/btnBuscar" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:hint="foto1.jpg"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnCamara"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>